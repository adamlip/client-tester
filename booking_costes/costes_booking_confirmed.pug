                        |  Huf
                    td(style={'text-align': 'right'}) 
                        = parseInt(val.seatPrice*val.seats)
                        |  Huf
            tr
                td(colspan=5 style={'text-align': 'right', 'font-weight': 'bold'}) 
                    = parseInt(booking.totalPrice)
                    |  Huf
       
        br
